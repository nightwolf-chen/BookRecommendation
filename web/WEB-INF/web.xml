<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Recommendation</servlet-name>
        <servlet-class>services.Recommendation</servlet-class>
        <init-param>
            <param-name>userid</param-name>
            <param-value>20100100001</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>UserBooks</servlet-name>
        <servlet-class>services.UserBooks</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserInfo</servlet-name>
        <servlet-class>services.UserInfo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Recommendation</servlet-name>
        <url-pattern>/Recommendation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserBooks</servlet-name>
        <url-pattern>/UserBooks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserInfo</servlet-name>
        <url-pattern>/UserInfo</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
